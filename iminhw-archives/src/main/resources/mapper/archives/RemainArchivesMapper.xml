<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.minhw.archives.mapper.RemainArchivesMapper">

    <resultMap type="RemainArchives" id="RemainArchivesResult">
            <result property="id" column="id"/>
            <result property="xm" column="xm"/>
            <result property="nf" column="nf"/>
            <result property="sfzhm" column="sfzhm"/>
            <result property="bj" column="bj"/>
            <result property="status" column="status"/>
            <result property="createBy" column="create_by"/>
            <result property="updateBy" column="update_by"/>
            <result property="remarks" column="remarks"/>
            <result property="updateDate" column="update_date"/>
            <result property="createDate" column="create_date"/>
    </resultMap>

    <sql id="selectRemainArchivesVo">
        select id, xm, nf, sfzhm, bj, status, create_by, update_by, remarks, update_date, create_date
        from remain_archives
    </sql>

    <select id="selectRemainArchivesList" parameterType="RemainArchives" resultMap="RemainArchivesResult">
        <include refid="selectRemainArchivesVo"/>
        <where>
                        <if test="xm != null  and xm != ''">
                            and xm like concat('%', #{xm}, '%')
                        </if>
                        <if test="nf != null  and nf != ''">
                            and nf = #{nf}
                        </if>
                        <if test="sfzhm != null  and sfzhm != ''">
                            and sfzhm like concat('%', #{sfzhm}, '%')
                        </if>
                        <if test="bj != null  and bj != ''">
                            and bj like concat('%', #{bj}, '%')
                        </if>
                        <if test="status != null ">
                            and status = #{status}
                        </if>
        </where>
    </select>

    <select id="selectRemainArchivesById" parameterType="Long"
            resultMap="RemainArchivesResult">
            <include refid="selectRemainArchivesVo"/>
            where id = #{id}
    </select>

    <insert id="insertRemainArchives" parameterType="RemainArchives" useGeneratedKeys="true"
            keyProperty="id">
        insert into remain_archives
        <trim prefix="(" suffix=")" suffixOverrides=",">
                    <if test="xm != null">xm,
                    </if>
                    <if test="nf != null">nf,
                    </if>
                    <if test="sfzhm != null">sfzhm,
                    </if>
                    <if test="bj != null">bj,
                    </if>
                    <if test="status != null">status,
                    </if>
                    <if test="createBy != null">create_by,
                    </if>
                    <if test="updateBy != null">update_by,
                    </if>
                    <if test="remarks != null">remarks,
                    </if>
                    <if test="updateDate != null">update_date,
                    </if>
                    <if test="createDate != null">create_date,
                    </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                    <if test="xm != null">#{xm},
                    </if>
                    <if test="nf != null">#{nf},
                    </if>
                    <if test="sfzhm != null">#{sfzhm},
                    </if>
                    <if test="bj != null">#{bj},
                    </if>
                    <if test="status != null">#{status},
                    </if>
                    <if test="createBy != null">#{createBy},
                    </if>
                    <if test="updateBy != null">#{updateBy},
                    </if>
                    <if test="remarks != null">#{remarks},
                    </if>
                    <if test="updateDate != null">#{updateDate},
                    </if>
                    <if test="createDate != null">#{createDate},
                    </if>
        </trim>
    </insert>

    <update id="updateRemainArchives" parameterType="RemainArchives">
        update remain_archives
        <trim prefix="SET" suffixOverrides=",">
                    <if test="xm != null">xm =
                        #{xm},
                    </if>
                    <if test="nf != null">nf =
                        #{nf},
                    </if>
                    <if test="sfzhm != null">sfzhm =
                        #{sfzhm},
                    </if>
                    <if test="bj != null">bj =
                        #{bj},
                    </if>
                    <if test="status != null">status =
                        #{status},
                    </if>
                    <if test="createBy != null">create_by =
                        #{createBy},
                    </if>
                    <if test="updateBy != null">update_by =
                        #{updateBy},
                    </if>
                    <if test="remarks != null">remarks =
                        #{remarks},
                    </if>
                    <if test="updateDate != null">update_date =
                        #{updateDate},
                    </if>
                    <if test="createDate != null">create_date =
                        #{createDate},
                    </if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteRemainArchivesById" parameterType="Long">
        delete
        from remain_archives where id = #{id}
    </delete>

    <delete id="deleteRemainArchivesByIds" parameterType="String">
        delete from remain_archives where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>